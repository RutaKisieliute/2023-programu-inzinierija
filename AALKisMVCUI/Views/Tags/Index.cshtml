@inject IHttpContextAccessor context
@model List<AALKisShared.Records.Tag>

@{
    if (context.HttpContext.Session.GetString("User") == null)
    {
        context.HttpContext.Response.Redirect("/User/login");
    }
}

@section ExtraHead {
    <link id="note-stylesheet" rel="stylesheet" href="~/css/Tags/Index.css">
}

<h1 style="text-align:center">Tags</h1>
<h3><ul>
    <table>
    <th>
        <tr>
            <td class="col1">Tag</td>
            <td class="col2">Note count</td>
        </tr>
    </th>
    @foreach(Tag t in Model){
        string link = "Tags/" + t.Name?.Replace(" ", "%20");
        <tr>
            <td class="col1"><kbd><a class="link" href=@link>@t.Name</a></kbd></td>
            <td class="col2">@t.NoteCount</td> 
        </tr>
    }
    </table>
</ul></h3>
